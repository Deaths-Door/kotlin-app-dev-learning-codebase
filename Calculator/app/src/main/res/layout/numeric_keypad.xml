<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/numericKeypad"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    tools:context=".MainActivity">
    <TableRow
        android:id="@+id/tableRow1"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <Button
            style="@style/btnScienctific"
            android:onClick="numberPressed"
            android:autoSizeTextType="uniform"
            android:text="!" />
        <Button
            style="@style/btnScienctific"
            android:id="@+id/btnDecToFrac"
            android:autoSizeTextType="uniform"
            android:text="D-F" />
        <Button
            style="@style/btnScienctific"
            android:autoSizeTextType="uniform"
            android:text=""/>
        <Button
            style="@style/btnScienctific"
            android:autoSizeTextType="uniform"
            android:text="("/>
        <Button
            style="@style/btnScienctific"
            android:autoSizeTextType="uniform"
            android:text=")"/>
    </TableRow>
    <TableRow
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            style="@style/btnScienctific"
            android:autoSizeTextType="uniform"
            android:id="@+id/btnSqrt"
            android:visibility="gone"
            android:text="√" />
        <Button
            style="@style/btnOperators"
            android:id="@+id/btnClear"
            android:autoSizeTextType="uniform"
            android:text="C"
            android:textSize="24sp"/>
        <Button
            style="@style/btnOperators"
            android:id="@+id/btnDel"
            android:autoSizeTextType="uniform"
            android:text="⌫">
        </Button>
        <Button
            style="@style/btnOperators"
            android:id="@+id/btnPercent"
            android:autoSizeTextType="uniform"
            android:text="%">
        </Button>
        <Button
            style="@style/btnOperators"
            android:autoSizeTextType="uniform"
            android:text="÷">
        </Button>
    </TableRow>
    <TableRow
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            style="@style/btnScienctific"
            android:id="@+id/btnSquare"
            android:visibility="gone"
            android:autoSizeTextType="uniform"
            android:text="x²">
        </Button>
        <Button
            style="@style/btnNumbers"
            android:autoSizeTextType="uniform"
            android:text="7">
        </Button>
        <Button
            style="@style/btnNumbers"
            android:autoSizeTextType="uniform"
            android:text="8">
        </Button>
        <Button
            style="@style/btnNumbers"
            android:autoSizeTextType="uniform"
            android:text="9">
        </Button>
        <Button
            style="@style/btnOperators"
            android:autoSizeTextType="uniform"
            android:text="×">
        </Button>
    </TableRow>
    <TableRow
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            style="@style/btnScienctific"
            android:id="@+id/btnPie"
            android:visibility="gone"
            android:autoSizeTextType="uniform"
            android:text="π" />
        <Button
            style="@style/btnNumbers"
            android:autoSizeTextType="uniform"
            android:text="4">
        </Button>
        <Button
            style="@style/btnNumbers"
            android:autoSizeTextType="uniform"
            android:text="5">
        </Button>
        <Button
            style="@style/btnNumbers"
            android:autoSizeTextType="uniform"
            android:text="6">
        </Button>
        <Button
            style="@style/btnOperators"
            android:autoSizeTextType="uniform"
            android:text="-">
        </Button>
    </TableRow>
    <TableRow
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btnE"
            style="@style/btnScienctific"
            android:autoSizeTextType="uniform"
            android:text="e"
            android:textAllCaps="false"
            android:visibility="gone" />
        <Button
            style="@style/btnNumbers"
            android:autoSizeTextType="uniform"
            android:text="1" />
        <Button
            style="@style/btnNumbers"
            android:autoSizeTextType="uniform"
            android:text="2">
        </Button>
        <Button
            style="@style/btnNumbers"
            android:autoSizeTextType="uniform"
            android:text="3">
        </Button>
        <Button
            style="@style/btnOperators"
            android:autoSizeTextType="uniform"
            android:text="+">
        </Button>
    </TableRow>
    <TableRow
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            style="@style/btnOperators"
            android:onClick="scientificKeypad"
            android:autoSizeTextType="uniform"
            android:text="OFF" />
        <Button
            style="@style/btnScienctific"
            android:id="@+id/btnAns"
            android:visibility="gone"
            android:autoSizeTextType="uniform"
            android:text="Ans" />
        <Button
            style="@style/btnNumbers"
            android:autoSizeTextType="uniform"
            android:text="0">
        </Button>
        <Button
            style="@style/btnNumbers"
            android:autoSizeTextType="uniform"
            android:text=".">
        </Button>
        <Button
            style="@style/btnOperators"
            android:id="@+id/btnEqual"
            android:autoSizeTextType="uniform"
            android:text="=">
        </Button>
    </TableRow>
</TableLayout>