<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable name="vm" type="com.example.musiclistener.music.MusicViewModel" />
    </data>
    <FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.viewpager_fragments.DetailedSearch">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <View
                android:layout_width="match_parent"
                android:layout_height="20dp"/>
            <SearchView
                android:id="@+id/detailed_search_search_box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:drawableStart="@drawable/ic_search"
                android:queryHint="Search songs,albums,etc" />
            <LinearLayout
                android:id="@+id/detailed_search_error_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:visibility="gone"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/detailed_search_error_msg_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/search_error_title"
                    android:textSize="35sp"
                    android:textAlignment="center"/>
                <TextView
                    android:id="@+id/detailed_search_error_msg_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/search_error_text"
                    android:textSize="24sp"
                    android:textAlignment="center"/>
            </LinearLayout>
            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/detailed_search_rv_song"
                android:name="com.example.musiclistener.ui.reusable_fragments.SongRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"/>
            <View android:layout_width="match_parent"
                android:layout_height="100dp"/>
        </LinearLayout>
    </FrameLayout>
</layout>