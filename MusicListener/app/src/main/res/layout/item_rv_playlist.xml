<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/confined_ripple_effect"
    android:padding="5dp">

    <ImageView
        android:id="@+id/item_playlist_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:src="@color/teal_200" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/item_playlist_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="61dp"
        android:layout_marginTop="5dp"
        android:textAlignment="viewStart"
        android:textSize="22sp"
        android:textStyle="bold"
        tools:text="Name" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/item_playlist_main_artists"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="85dp"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="5dp"
        android:textSize="16sp"
        tools:text="MainArtist" />

    <ImageView
        android:id="@+id/item_playlist_pinned"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="61dp"
        android:layout_marginTop="36dp"
        android:maxWidth="20dp"
        android:rotation="45"
        app:tint="@color/white" />
</RelativeLayout>