<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CircleShape">
        <item name="shapeAppearance">@style/ShapeAppearance.MaterialComponents.SmallComponent</item>
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="ForeverMarquee">
        <!--TODO add isSelected in items so it actually works -->
        <item name="android:ellipsize">marquee</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="ParentBottomNav" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">@color/orange</item>
        <item name="itemIconTint">@color/black</item>
        <item name="itemTextColor">@color/black</item>
        <item name="itemIconSize">25dp</item>
    </style>

</resources>