<resources>
    <attr name="backgroundColor" format="color" />

    <attr name="textSize" format="dimension" />
    <attr name="textColor" format="reference|color" />
    <attr name="textPadding" format="dimension" />
    <attr name="textPaddingStart" format="dimension" />
    <attr name="textPaddingEnd" format="dimension" />
    <attr name="textPaddingTop" format="dimension" />
    <attr name="textPaddingBottom" format="dimension" />
    <attr name="textAlignment" format="integer">
        <enum name="inherit" value="0" />
        <enum name="start" value="2" />
        <enum name="end" value="3" />
        <enum name="center" value="4" />
    </attr>

    <declare-styleable name="LyricsView">
        <attr name="backgroundColor" />
        <attr name="textSize"  />
        <attr name="textColor" />
        <attr name="textPadding"  />
        <attr name="textPaddingStart" />
        <attr name="textPaddingEnd" />
        <attr name="textPaddingTop" />
        <attr name="textPaddingBottom" />
        <attr name="textAlignment" />

        <attr name="textLineExtraSpacing" format="dimension" />

        <attr name="textHyphenationFrequency" format="integer">
            <enum name="always" value="0"/>
            <enum name="never" value="1"/>
            <enum name="whenNeeded" value="2"/>
        </attr>

        <attr name="highlightSungLyrics" format="boolean" />
        <attr name="highlightLyricsColor" format="color" />

        <!-- negative 1 is indefinite -->
        <attr name="highlightDuration" format="integer"/>

        <attr name="shadowColor" format="color"/>
        <attr name="shadowRadius" format="color"/>

    </declare-styleable>
</resources>