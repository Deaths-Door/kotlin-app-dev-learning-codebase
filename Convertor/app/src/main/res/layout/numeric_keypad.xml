<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/numericKeypad"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    tools:context=".Convertor">
    <TableRow
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            style="@style/btnOperators"
            android:id="@+id/btnEqual"
            android:autoSizeTextType="uniform"
            android:text="="
            android:textSize="24sp"/>
        <Button
            style="@style/btnOperators"
            android:id="@+id/btnClear"
            android:autoSizeTextType="uniform"
            android:text="C"
            android:textSize="24sp"/>
        <Button
            style="@style/btnOperators"
            android:id="@+id/btnDel"
            android:autoSizeTextType="uniform"
            android:text="âŒ«">
        </Button>

    </TableRow>
    <TableRow
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            style="@style/btnNumbers"
            android:onClick="onClick"
            android:autoSizeTextType="uniform"
            android:text="7">
        </Button>
        <Button
            style="@style/btnNumbers"
            android:autoSizeTextType="uniform"
            android:text="8">
        </Button>
        <Button
            style="@style/btnNumbers"
            android:autoSizeTextType="uniform"
            android:text="9">
        </Button>
    </TableRow>
    <TableRow
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            style="@style/btnNumbers"
            android:autoSizeTextType="uniform"
            android:text="4">
        </Button>
        <Button
            style="@style/btnNumbers"
            android:autoSizeTextType="uniform"
            android:text="5">
        </Button>
        <Button
            style="@style/btnNumbers"
            android:autoSizeTextType="uniform"
            android:text="6">
        </Button>
    </TableRow>
    <TableRow
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            style="@style/btnNumbers"
            android:autoSizeTextType="uniform"
            android:text="1" />
        <Button
            style="@style/btnNumbers"
            android:autoSizeTextType="uniform"
            android:text="2">
        </Button>
        <Button
            style="@style/btnNumbers"
            android:autoSizeTextType="uniform"
            android:text="3">
        </Button>
    </TableRow>
    <TableRow
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            style="@style/btnOperators"
            android:autoSizeTextType="uniform"
            android:text=" " />
        <Button
            style="@style/btnNumbers"
            android:autoSizeTextType="uniform"
            android:text="0">
        </Button>
        <Button
            style="@style/btnNumbers"
            android:id="@+id/btnDot"
            android:autoSizeTextType="uniform"
            android:text=".">
        </Button>
    </TableRow>
</TableLayout>